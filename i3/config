# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
  bar {
    status_command i3blocks -c ~/.i3/i3blocks.conf
    i3bar_command i3bar -t
    position bottom
    strip_workspace_numbers yes
    binding_mode_indicator yes
    #tray_output eDP1
    #tray_output LVDS-0
    tray_padding 0
    height 23
    colors {
      separator $basetr01
      background $basetr01
      statusline $base05
#                        border       background      text
      focused_workspace  $basetr01 $basetr01    $base07
      active_workspace   $basetr01 $basetr01    $base03
      inactive_workspace $basetr01 $basetr01    $base03
      urgent_workspace   $basetr01 $basetr01    $base08
   }

